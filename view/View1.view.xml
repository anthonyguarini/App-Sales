<mvc:View controllerName="zappsales.controller.View1"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:t="sap.ui.table"
	xmlns:core="sap.ui.core"
	core:require="{DateType: 'sap/ui/model/type/Date'}"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.f"
    xmlns:mdc="sap.ui.mdc"
    xmlns:mdct="sap.ui.mdc.table"
    xmlns:form="sap.ui.layout.form">
    
    <f:DynamicPage id="dynamicPageId" preserveHeaderStateOnScroll="true" showFooter="true" fitContent="true">
        <f:header>
            <f:DynamicPageHeader id="dynamycPageHeaderId" pinnable="true">
                <f:content>
	                <GenericTile id="TileTtVend" class="tileLayout defaultLayoutTiles" header="Total Vendido" subheader="Carteira e Faturamento" press="onPress">
		                <TileContent id="ContentTtVend" unit="Unit" footer="Footer Text">
			                <NumericContent id="NumericTtVend" value="5000.00" icon="sap-icon://line-charts" withMargin="false" />
		                </TileContent>
	                </GenericTile>                    
	                <GenericTile id="TileTtFat" class="tileLayout defaultLayoutTiles" header="Total Faturado" subheader="Faturado no MÃªs" press="onPress">
		                <TileContent id="ContentTtFat" unit="Unit" footer="Footer Text">
			                <NumericContent id="NumericTtFat" value="2600.00" icon="sap-icon://line-charts" withMargin="false" />
		                </TileContent>
	                </GenericTile>      
	                <GenericTile id="TileTtCart" class="tileLayout defaultLayoutTiles" header="Carteira" subheader="3M Carteira" press="onPress">
		                <TileContent id="ContentTtCart" unit="Unit" footer="Footer Text">
			                <NumericContent id="NumericTtCart" value="2400.00" icon="sap-icon://line-charts" withMargin="false" />
		                </TileContent>
	                </GenericTile>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>

        <f:content>
            <VBox id="PageMain" class="sapUiSmallMargin">
                <HBox id="Filters">
                    <VBox id="BoxVendor" class="FiltersBoxes defaultLayoutTiles">
                        <l:VerticalLayout id="FindVendor" class="sapUiContentPadding" width="100%">
                            <Label id="Fvendor" text="Vendedor" labelFor="VendorInput"/>
                                <Input id="VendorInput" textFormatMode="KeyValue" placeholder="Especificar Vendedor"
                                    showSuggestion="true" showValueHelp="true" valueHelpRequest=".onValueHelpRequestVendor"
                                    suggestionItems="{/SalesHierarchy}" suggestionItemSelected=".onSuggestionVendorSelected" width="100%">
                                    <suggestionItems>
                                        <core:ListItem 
                                            id="ListVend" 
                                            key="{Cod_Representante}"
                                            text="{Nome_Representante}"
                                            additionalText="{Cod_Representante}" />
                                    </suggestionItems>
                                </Input>    
                        </l:VerticalLayout>
                    </VBox>
                    <VBox id="BoxClient" class="FiltersBoxes defaultLayoutTiles">
                        <l:VerticalLayout id="FindClient" class="sapUiContentPadding" width="100%">
                            <Label id="Fclient" text="Cliente" labelFor="ClientInput" />
                                <Input id="ClientInput" textFormatMode="KeyValue" placeholder="Especificar cliente"
                                    showSuggestion="true" showValueHelp="true" valueHelpRequest=".onValueHelpRequest"
                                    suggestionItems="{/CustomersSet}" suggestionItemSelected=".onSuggestionCustomerSelected" width="100%">
                                    <suggestionItems>
                                        <core:ListItem id="ListCust"
                                            key="{Cod_Cliente}"
                                            text="{Razao_Social}"
                                            additionalText="{Cod_Cliente}" />
                                    </suggestionItems>
                                </Input>          
                        </l:VerticalLayout>
                    </VBox>
                </HBox>
        
                <mdc:Table id="tableSales"
                    header="Vendas Realizadas"
                    delegate="{ 'name': 'zappsales.delegates.tableSalesDelegate', 'payload': { 'collectionName': 'SoldDocumentsSet' } }"
                    type="ResponsiveTable"
                    useColumnLabelsAsTooltips="true"
                    selectionMode="Multi"
                    p13nMode="Column,Sort,Group,Filter">
                
                    <mdct:Column id="ColCodPed"
                        propertyKey="Cod_Pedido"
                        header="Pedido">
                    </mdct:Column>
                    <mdct:Column id="ColDataPed"
                        propertyKey="Data_Pedido"
                        header="Data do Pedido">                         
                    </mdct:Column>
                    <mdct:Column id="ColNFe"
                        propertyKey="NFe"
                        header="Nota Fiscal">                         
                    </mdct:Column>
                    <mdct:Column id="ColDataFat"
                        propertyKey="Data_Faturamento"
                        header="Data do Faturamento">                         
                    </mdct:Column>
                    <mdct:Column id="ColCodCli"
                        propertyKey="Cod_Cliente"
                        header="Cliente">                         
                    </mdct:Column>
                    <mdct:Column id="ColCodRep"
                        propertyKey="Cod_Representante"
                        header="Representante">                         
                    </mdct:Column>
                    <mdct:Column id="ColCodMat"
                        propertyKey="Cod_Material"
                        header="Material">                         
                    </mdct:Column>
                    <mdct:Column id="ColQtde"
                        propertyKey="Qtde"
                        header="Quantidade">                         
                    </mdct:Column>
                    <mdct:Column id="ColVlrProd"
                        propertyKey="Vlr_Produto"
                        header="Valor do Produto">                         
                    </mdct:Column>
                    <mdct:Column id="ColStatus"
                        propertyKey="Status"
                        header="Status">                         
                    </mdct:Column>
                </mdc:Table>    
            </VBox>
        </f:content>
    </f:DynamicPage>
</mvc:View>